@{
    ViewData["Title"] = "New Wedding Page";
}
@model Wedding

<a href="/dashboard">Dashboard</a>
<h1>Plan A Wedding</h1>
<form asp-action="CreateWedding" method="POST" class="col-5 mx-auto">
    <div class="form-group">
        <span asp-validation-for="WedderOne"></span><br>
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="WedderTwo"></span><br>
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Date"></span><br>
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Address"></span><br>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
    </div>
    <div>
        <input type="submit" value="Create" class="btn btn-lg btn-primary">
    </div>
</form>